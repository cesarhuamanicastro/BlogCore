@model BlogCore.Models.ViewModels.ArticuloVM

<br />
<br />
<h3 class="text-center">Crear un Nuevo Articulo</h3>

<form method="post" asp-action="create" enctype="multipart/form-data">
    <div class="row px-2 mx-2 border">
        @*PARA VALIDAR CAMPSO SEGUN EL MODELO*@
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <div class="col-md-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Articulo.Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Articulo.Nombre" class="form-control form-control-sm" />
                    <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Articulo.Descripcion"></label>
                </div>
                <div class="col-md-8">
                    <textarea asp-for="Articulo.Descripcion" class="form-control form-control-sm" style="height: 300px;"></textarea>
                    <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="Articulo.CategoriaId"></label>
                </div>
                <div class="col-4">
                    @Html.DropDownListFor(m => m.Articulo.CategoriaId, Model.ListaCategorias, "Seleccone una Categoria-", new { @class = "form-control" })

                </div>
            </div>


            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="Articulo.Nombre"></label>
                </div>
                <div class="col-4">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control form-control-sm" />

                </div>
            </div>



            <div class="form-group row">

                <div class="col-4 offset-3">

                    <partial name="_VistaCrearVolver" />
                </div>
            </div>

        </div>


    </div>


</form>

@section Scripts{

    <script src="https://cdn.tiny.cloud/1/3etaw353ael3wf9p9ywj3ssf3uhbh6agxpjtp00i48kn1b6u/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
          
        });
    </script>
}