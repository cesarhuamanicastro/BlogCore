@model BlogCore.Models.Categoria
@{
    ViewData["Title"] = "Edit";
}

    <h3 class="text-center">Crear una Nueva Categoria</h3>

<form method="post" asp-action="edit">
    <div class="row px-2 mx-2 border">
        @*PARA VALIDAR CAMPSO SEGUN EL MODELO*@
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

        <input type="hidden" asp-for="Id" />

        <div class="col-md-10 offset-1 mt-4">

            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Nombre" class="form-control form-control-sm" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <label asp-for="Orden"></label>
                </div>
                <div class="col-4">
                    <input asp-for="Orden" class="form-control form-control-sm" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-4 offset-3">

                    <div class="row">

                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control form-control-sm" asp-route-id="@Model.Id">Actualizar</button>
                        
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control form-control-sm">Volver a lista</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>


</form>