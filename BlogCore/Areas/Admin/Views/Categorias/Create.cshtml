
@model BlogCore.Models.Categoria
@{
    ViewData["Title"] = "Create";
}


<br />
<br />
<h3 class="text-center">Crear una Nueva Categoria</h3>

<form method="post" asp-action="create">
    <div class="row px-2 mx-2 border">
        @*PARA VALIDAR CAMPSO SEGUN EL MODELO*@
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
            <div class="col-md-10 offset-1 mt-4">

                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="Nombre"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Nombre" class="form-control form-control-sm" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="Orden"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="Orden" class="form-control form-control-sm" />
                        <span asp-validation-for="Orden" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-4 offset-3">

                        <partial name="_VistaCrearVolver" />
                    </div>
                </div>

            </div>

       
    </div>


</form>